@model BlogMariana.Models.Blog.ListarPostsViewModel
    @if (Model.TotalPaginas > 1)
    {
        var paginaAnterior = Model.PaginaAtual - 1;
        var proximaPagina = Model.PaginaAtual + 1;
        <div class="pagination">
            @if (Model.PaginaAtual > 1)
            {
                @Html.ActionLink("Pagina anterior",
                                    "Index",
                                    "Blog", new {   pagina = paginaAnterior,
                                                    tag = Model.Tag,
                                                    pesquisa = Model.Pesquisa },
                                    new { rel = "prev"})
            if (proximaPagina != -1)
            {
             <text>|</text>
            }
}
            @if (Model.PaginaAtual < Model.TotalPaginas)
            {
                @Html.ActionLink("Próxima pagina",
                                    "Index",
                                    "Blog", new {   pagina = proximaPagina,
                                                    tag = Model.Tag, 
                                                    pesquisa = Model.Pesquisa },
                                    new { rel = "next" })
            }
        </div>
    }
